<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailActivity">

    <LinearLayout
        android:id="@+id/linearLayoutTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bg"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back_ob_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_ic"
            android:backgroundTint="#FFFFFF" />

        <TextView
            android:id="@+id/Title_de_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingRight="20dp"
            android:text="Detail"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnTimeOfCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/linearLayoutTitle">

        <TextView
            android:id="@+id/timeoc_d_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time of course:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeoc_d_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_bg"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lnTimeOfCourse">

        <TextView
            android:id="@+id/capacity_d_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/capacity_d_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_bg"
            android:text="Capacity"
            android:padding="10dp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnCapacity">

        <TextView
            android:id="@+id/duration_d_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/duration_d_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_bg"
            android:padding="10dp"
            android:text="Duration"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnPpc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnDuration">

        <TextView
            android:id="@+id/ppc_d_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Per class:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ppc_d_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_bg"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnDow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnPpc">

        <TextView
            android:id="@+id/dow_d_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Day of the week:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dow_d_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_bg"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnTypeoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnDow">

        <TextView
            android:id="@+id/typeoc_d_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of class:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/typeoc_d_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_bg"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lnTypeoc">

        <TextView
            android:id="@+id/des_d_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Description" />

        <TextView
            android:id="@+id/des_d_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_bg"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>